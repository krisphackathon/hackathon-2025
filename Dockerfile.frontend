FROM python:3.11-slim

WORKDIR /app

# Install Streamlit and dependencies
RUN pip install --no-cache-dir \
    streamlit==1.31.0 \
    requests==2.31.0 \
    websockets==12.0

# Copy the Streamlit app
COPY app.py .

# Expose Streamlit port
EXPOSE 8501

# Run Streamlit
CMD ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0"]
