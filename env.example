# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=meeting_transcriptions

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Performance Settings
MAX_CONTEXT_LENGTH=128000
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
BATCH_SIZE=100
MAX_WORKERS=4

# Search Settings
TOP_K_RETRIEVAL=20
TOP_K_RERANK=5
SIMILARITY_THRESHOLD=0.7
HYBRID_SEARCH_WEIGHT=0.7

# API Settings
API_RATE_LIMIT=100
API_TIMEOUT=60
CORS_ORIGINS=["http://localhost:3000","http://localhost:8501"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application
DEBUG=false
